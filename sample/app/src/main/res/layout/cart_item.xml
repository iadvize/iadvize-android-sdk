<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardElevation="4dp"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:id="@+id/cart_item_picture"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:textColor="#FF642F"
            android:textSize="16sp"
            android:gravity="center_vertical|right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/cart_item_price"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:textColor="#26282D"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:layout_toLeftOf="@+id/cart_item_price"
            android:layout_toRightOf="@+id/cart_item_picture"
            android:layout_centerVertical="true"
            android:id="@+id/cart_item_name"/>

        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="8dp"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:background="@drawable/cart_item_quantity"
            android:gravity="center"
            android:id="@+id/cart_item_quantity"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>