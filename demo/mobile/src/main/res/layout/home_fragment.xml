<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whisper"
    android:fillViewport="true"
    tools:context=".feature.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/promotion_view"
            layout="@layout/promotion_view" />

        <include
            android:id="@+id/product_list_view"
            layout="@layout/product_list_view" />

        <include
            android:id="@+id/service_list_view"
            layout="@layout/service_list_view" />
    </LinearLayout>

</androidx.core.widget.NestedScrollView>